<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--tools:context=".activities.VbelApiActivity">-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/getPaperLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/colorLightGray"
        app:layout_constraintTop_toTopOf="@id/getPaperLayout">

        <TextView
            android:id="@+id/paperTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/editPk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/paperTitle"
            tools:layout_editor_absoluteX="16dp" />

        <Button
            android:id="@+id/getButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Get post"
            app:layout_constraintTop_toBottomOf="@+id/editPk"
            tools:layout_editor_absoluteX="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/deletePaperLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorLightGray"
        app:layout_constraintTop_toBottomOf="@id/getPaperLayout"
        tools:layout_editor_absoluteX="16dp">

        <EditText
            android:id="@+id/editDeletePk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Delete post"
            app:layout_constraintTop_toBottomOf="@+id/editDeletePk"
            tools:layout_editor_absoluteX="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/updatePaperLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorLightGray"
        app:layout_constraintTop_toBottomOf="@id/deletePaperLayout"
        tools:layout_editor_absoluteX="16dp">

        <EditText
            android:id="@+id/editUpdatePk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Update post"
            app:layout_constraintTop_toBottomOf="@+id/editUpdatePk"
            tools:layout_editor_absoluteX="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>